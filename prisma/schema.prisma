generator client {
  provider = "prisma-client-js"
}

datasource employee {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model departments {
  dept_no      String         @id @employee.Char(4)
  dept_name    String         @unique @employee.VarChar(40)
  dept_emp     dept_emp[]
  dept_manager dept_manager[]
}

model dept_emp {
  emp_no      Int
  dept_no     String      @employee.Char(4)
  from_date   DateTime    @employee.Date
  to_date     DateTime    @employee.Date
  departments departments @relation(fields: [dept_no], references: [dept_no])
  employees   employees   @relation(fields: [emp_no], references: [emp_no])

  @@id([emp_no, dept_no])
  @@index([dept_no], name: "dept_no")
}

model dept_manager {
  emp_no      Int
  dept_no     String      @employee.Char(4)
  from_date   DateTime    @employee.Date
  to_date     DateTime    @employee.Date
  departments departments @relation(fields: [dept_no], references: [dept_no])
  employees   employees   @relation(fields: [emp_no], references: [emp_no])

  @@id([emp_no, dept_no])
  @@index([dept_no], name: "dept_no")
}

model employees {
  emp_no       Int              @id
  birth_date   DateTime         @employee.Date
  first_name   String           @employee.VarChar(14)
  last_name    String           @employee.VarChar(16)
  gender       employees_gender
  hire_date    DateTime         @employee.Date
  dept_emp     dept_emp[]
  dept_manager dept_manager[]
  salaries     salaries[]
  titles       titles[]
}

model salaries {
  emp_no    Int
  salary    Int
  from_date DateTime  @employee.Date
  to_date   DateTime  @employee.Date
  employees employees @relation(fields: [emp_no], references: [emp_no])

  @@id([emp_no, from_date])
}

model titles {
  emp_no    Int
  title     String    @employee.VarChar(50)
  from_date DateTime  @employee.Date
  to_date   DateTime? @employee.Date
  employees employees @relation(fields: [emp_no], references: [emp_no])

  @@id([emp_no, title, from_date])
}

enum employees_gender {
  M
  F
}
