{
  "env": {
    "browser": false,
    "commonjs": true,
    "node": true,
    "es2021": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-var": "error",
    // "no-unused-vars": ["error", { "args": "none" }]
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    // "no-console": "error"
  }
}
